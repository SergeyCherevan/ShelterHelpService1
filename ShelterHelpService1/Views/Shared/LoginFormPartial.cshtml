
@using ShelterHelpService1.Settings

@model ShelterHelpService1.Models.ViewModels.LoginViewModel

<form asp-action="Login" asp-controller="Account" asp-antiforgery="true" asp-route-returnUrl="@ViewBag.returnUrl" accesskeymethod="Post"
    class="form" id="login-form">

    <div class="form-header">
        <a class="logo" id="logotype-form" href="#">@CompanyInfo.Name</a>

        <a class="exit" id="exit-login-form" href="#">×</a>
    </div>

    <div class="columns">

        <div class="left-block">
            <img src="~/images/dog-on-form.jpg" class="img-on-form" />
        </div>

        <div class="right-block">

            <span id="error-span">@(ViewBag.loginFormMessage ?? "")</span>
            <br>

            <label asp-for="UserName">Никнейм<span>*</span></label><br>
            <input asp-for="UserName" type="text" required><br>
            <br><br>

            <label asp-for="Password">Пароль<span>*</span></label><br>
            <input asp-for="Password" type="password" required><br>
            <br><br>

            <div class="one-line">
                <button id="login-submit" type="submit" class="interactive-button">Войти</button>
                <a class="link" asp-controller="Account" asp-action="Registration">Регистрация</a>
            </div>

        </div>

    </div>

</form>